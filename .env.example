# ========================================
# NewMoon ERP/POS - Variables de Entorno
# ========================================
# Copiar este archivo a .env y configurar con valores reales

# ========================================
# APLICACIÓN
# ========================================
APP_NAME="NewMoon ERP/POS"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tu-dominio.com

# Timezone
TZ=America/Argentina/Buenos_Aires

# ========================================
# BASE DE DATOS PRINCIPAL
# ========================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=newmoon_db
DB_USER=newmoon_user
DB_PASSWORD=tu_password_seguro_aqui

# Esperar a que la BD esté lista antes de iniciar
WAIT_FOR_DB=true

# ========================================
# BASE DE DATOS MOON (OPCIONAL)
# Sistema de cobro y verificación de clientes
# ========================================
DB_MOON_HOST=107.161.23.241
DB_MOON_PORT=3306
DB_MOON_NAME=moondb
DB_MOON_USER=moonuser
DB_MOON_PASSWORD=

# ========================================
# MERCADOPAGO
# ========================================
# Obtener en: https://www.mercadopago.com.ar/developers
MP_PUBLIC_KEY=TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
MP_ACCESS_TOKEN=TEST-xxxxxxxxxxxx-xxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-xxxxxxxxx

# Modo de prueba o producción
MP_MODE=test
# MP_MODE=live

# ========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=tu-email@gmail.com
MAIL_PASS=tu-password-app
MAIL_FROM=noreply@moondesarrollos.com
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# AFIP (FACTURACIÓN ELECTRÓNICA)
# ========================================
# Modo: testing o production
AFIP_MODE=testing

# CUIT de la empresa
AFIP_CUIT=20123456789

# ========================================
# CONFIGURACIÓN AVANZADA
# ========================================

# PHP Configuration
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_MAX_FILESIZE=50M
PHP_POST_MAX_SIZE=50M
PHP_MAX_EXECUTION_TIME=300

# Session
SESSION_LIFETIME=7200
SESSION_SECURE=true
SESSION_HTTPONLY=true

# ========================================
# DOCKER / DOKPLOY
# ========================================

# Puerto externo para desarrollo local
# En Dokploy esto se maneja automáticamente
HTTP_PORT=8080

# ========================================
# BACKUP Y MANTENIMIENTO
# ========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
